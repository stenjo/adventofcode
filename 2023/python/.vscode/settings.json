{
    "runItOn": {
        "commands": [
            {
                "match": "\\.py$",
                "isAsync": true,
                "isShellCommand": false,
                "cmd": "testing.runAll"
            },
        ],
    },
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "testing.automaticallyOpenPeekViewDuringAutoRun": true,
    "python.languageServer": "Pylance",
    "python.testing.pytestArgs": [
        "tests"
    ],
}