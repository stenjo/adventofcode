{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$rustc",
            "detail": "Runs cargo test to execute Rust tests."
        },
        {
            "label": "Watch and Test",
            "type": "shell",
            "command": "cargo watch -x 'test --workspace'",
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}
